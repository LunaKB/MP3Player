<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:layout_alignStart="@id/seekBar_music_progress"
            android:layout_alignLeft="@id/seekBar_music_progress"/>

        <ImageButton
            android:id="@+id/button_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_alignEnd="@id/seekBar_music_progress"
            android:layout_alignRight="@id/seekBar_music_progress"/>

        <SeekBar
            android:id="@+id/seekBar_music_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_play_pause"/>

        <TextView
            android:id="@+id/text_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:layout_below="@id/seekBar_music_progress"
            android:layout_alignStart="@id/seekBar_music_progress"
            android:layout_alignLeft="@id/seekBar_music_progress"/>

        <TextView
            android:id="@+id/text_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:layout_below="@id/seekBar_music_progress"
            android:layout_alignEnd="@id/seekBar_music_progress"
            android:layout_alignRight="@id/seekBar_music_progress"/>
    </RelativeLayout>
</FrameLayout>
